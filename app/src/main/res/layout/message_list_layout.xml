<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_msg_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_touxiang_msg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_touxiang_24dp"
            android:background="@drawable/header_radio"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_name_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_nick_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_last_msg_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_message"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
